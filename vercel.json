{
  "version": 2,
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["views/**", "public/**"]
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/css/(.*)",
      "dest": "/public/css/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/public/images/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/public/js/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/public/favicon.ico"
    },
    {
      "src": "/(.*)",
      "dest": "src/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "CACHE_DURATION": "3600000",
    "ENABLE_COMPRESSION": "true",
    "ELEVENLABS_API_KEY": "sk_c4c232c8372ad7aa08b090ac5b0aaa6c56e4b90d2b92648e"
  },
  "devCommand": "npm run dev",
  "buildCommand": "pip install python-dotenv elevenlabs==0.2.26 requests==2.31.0 openai==1.3.0 && npm run vercel-build"
} 